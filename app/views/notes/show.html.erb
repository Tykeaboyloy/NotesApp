<%=  link_to"Go back...", notes_path , class:"inline-flex justify-center rounded-md border border-transparent py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 ml-7 mt-5" , style:"color:teal"%>
<h1 style="font-weight:bold;" class="ml-5 mt-5"><%=@note.title%></h1>
<div class="mt-5 ml-10">
  <pre><%=@note.body%></pre>
</div>
<div class="ml-8 mt-10">
  <%= link_to 'Edit this note', edit_note_path , class:"inline-flex justify-center rounded-md border border-transparent bg-gray-500 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
</div>
<div class="ml-8 mt-3">
  <%= 
   link_to "Delete this note", note_path,
   data: {turbo_method: :delete,turbo_confirm: "Are you sure you want to delete this note?"},
   class:"inline-flex justify-center rounded-md border border-transparent py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2" ,
  style: "color:red"
  %>
</div>
