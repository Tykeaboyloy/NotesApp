<h1>New Note</h1>
<div class="ml-5 mt-10">
  <%= form_with model: note do |form| %>
    <input type="hidden" name="note[author]" id="note_author" value=1>
    <div class="mt-2">
      <%= form.label :title, class:"block text-sm font-medium text-gray-700" %>
      <%= form.text_field :title, class:"mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",placeholder:"Enter the note title" %>
      <% note.errors.full_messages_for(:title).each do |message| %>
        <div style="color:red" ><%= message %></div>
      <% end %>
    </div>
    <div class="mt-2">
      <%= form.label :body, class:"block text-sm font-medium text-gray-700" %>
      <%= form.text_area :body, class:"mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",placeholder:"Enter the note body" %>
      <% note.errors.full_messages_for(:body).each do |message|%>
        <div style="color:red" ><%= message %></div>
      <% end %>
    </div>
    <div class="bg-gray-50 px-4 py-3 text-right sm:px-6 flex justify-end gap-x-4">
      <a href="/" class="inline-flex justify-center rounded-md border border-transparent bg-gray-500 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">Cancel</a>
      <div class="inline-flex justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
        <%= form.submit%>
      </div>
    </div>
  <%end%>
</div>
